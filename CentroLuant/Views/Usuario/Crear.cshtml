@model CentroLuant.Models.Usuario

@{
    ViewData["Title"] = "Crear usuario";
}

<style>
    .form-card {
        background: white;
        padding: 24px;
        border-radius: 14px;
        box-shadow: 0 6px 22px rgba(15,23,42,0.06);
        border: 1px solid #E2E8F0;
        max-width: 520px;
    }

    .form-title {
        font-size: 1.4rem;
        font-weight: 700;
        margin-bottom: 16px;
        color: #0F172A;
    }

    .btn-save {
        width: 100%;
        padding: 10px;
        border-radius: 10px;
        background: #3B82F6;
        color: white;
        font-weight: 600;
        border: none;
        margin-top: 12px;
    }
</style>

<div class="form-card mx-auto">
    <h2 class="form-title">Crear nuevo usuario</h2>

    <form method="post">

        <div class="mb-3">
            <label class="form-label">Nombre Completo</label>
            <input class="form-control" asp-for="NombreCompleto" />
        </div>

        <div class="mb-3">
            <label class="form-label">Usuario</label>
            <input class="form-control" asp-for="UsuarioLogin" />
        </div>

        <div class="mb-3">
            <label class="form-label">Contraseña</label>
            <input class="form-control" asp-for="ContrasenaHash" type="password" />
        </div>

        <div class="mb-3">
            <label class="form-label">Rol</label>
            <select class="form-select" asp-for="Rol">
                <option>Administrador</option>
                <option>Recepcionista</option>
                <option>Especialista</option>
            </select>
        </div>

        <button class="btn-save">Guardar</button>
    </form>
</div>
