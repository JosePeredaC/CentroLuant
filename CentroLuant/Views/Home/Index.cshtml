@{ ViewData["Title"] = "Inicio"; }

<style>
    /* CONTENEDOR GENERAL DEL DASHBOARD */
    .home-wrapper {
        max-width: 1120px;           /* Evita que se estire a todo el ancho */
        margin: 0 auto;
        padding: 24px 0 40px;
    }

    /* ENCABEZADO */
    .home-header-title {
        font-size: 1.6rem;
        font-weight: 700;
        color: #0F172A;
        margin-bottom: 4px;
    }

    .home-header-subtitle {
        color: #64748B;
        font-size: 0.95rem;
        margin-bottom: 18px;
    }

    .home-header-helper {
        color: #94A3B8;
        font-size: 0.85rem;
        margin-bottom: 0;
    }

    /* TARJETAS DE MÓDULO */
    .module-grid {
        margin-top: 24px;
    }

    .module-card {
        background: #FFFFFF;
        border-radius: 14px;
        border: 1px solid #E2E8F0;
        padding: 18px 18px 16px;
        height: 100%;
        display: flex;
        flex-direction: row;
        align-items: flex-start;
        gap: 14px;
        box-shadow: 0 6px 18px rgba(15, 23, 42, 0.06);
        transition: border-color .15s ease, box-shadow .15s ease,
                    transform .15s ease, background-color .15s ease;
    }

    .module-card:hover {
        border-color: #3B82F6;
        box-shadow: 0 10px 26px rgba(15, 23, 42, 0.10);
        transform: translateY(-2px);
        background-color: #F9FAFB;
        cursor: pointer;
    }

    .module-card.disabled {
        opacity: 0.65;
        cursor: default;
        pointer-events: none;
        border-style: dashed;
        box-shadow: none;
        background-color: #FFFFFF;
    }

    .module-icon {
        width: 42px;
        height: 42px;
        border-radius: 12px;
        background: #E0F2FE;
        display: flex;
        align-items: center;
        justify-content: center;
        flex-shrink: 0;
        font-size: 1.25rem;
        color: #0F172A;
    }

    .module-main {
        flex: 1;
        display: flex;
        flex-direction: column;
    }

    .module-title {
        font-size: 1rem;
        font-weight: 600;
        color: #0F172A;
        margin-bottom: 3px;
    }

    .module-text {
        font-size: 0.88rem;
        color: #64748B;
        margin-bottom: 8px;
        line-height: 1.3rem;
    }

    .module-meta {
        font-size: 0.8rem;
        color: #94A3B8;
        margin-top: auto;
    }
</style>

<div class="home-wrapper">
    <!-- ENCABEZADO -->
    <div class="mb-3">
        <h1 class="home-header-title">Panel principal</h1>
        <p class="home-header-subtitle">Centro Odontológico Luant</p>
        <p class="home-header-helper">
            Desde aquí puede acceder a los módulos principales del sistema.  
            Seleccione la opción que corresponda a la tarea que va a realizar.
        </p>
    </div>

    <!-- TARJETAS DE MÓDULO -->
    <div class="row module-grid g-3">
        <!-- Gestión clínica -->
        <div class="col-lg-4 col-md-6">
            <div class="module-card" onclick="location.href='@Url.Action("Historial","Clinico")'">
                <div class="module-icon">
                    <i class="bi bi-journal-medical"></i>
                </div>
                <div class="module-main">
                    <div class="module-title">Gestión clínica</div>
                    <div class="module-text">
                        Consulta historiales médicos y registra diagnósticos y tratamientos realizados.
                    </div>
                    <div class="module-meta">Rol recomendado: Especialista</div>
                </div>
            </div>
        </div>

        <!-- Gestión de pacientes -->
        <div class="col-lg-4 col-md-6">
            <div class="module-card disabled">
                <div class="module-icon">
                    <i class="bi bi-people"></i>
                </div>
                <div class="module-main">
                    <div class="module-title">Gestión de pacientes</div>
                    <div class="module-text">
                        Registro y actualización de datos personales y contacto de los pacientes.
                    </div>
                    <div class="module-meta">Próximamente · Rol: Recepción</div>
                </div>
            </div>
        </div>

        <!-- Gestión de citas -->
        <div class="col-lg-4 col-md-6">
            <div class="module-card disabled">
                <div class="module-icon">
                    <i class="bi bi-calendar2-check"></i>
                </div>
                <div class="module-main">
                    <div class="module-title">Gestión de citas</div>
                    <div class="module-text">
                        Agenda y control de citas por día, especialista y paciente.
                    </div>
                    <div class="module-meta">Próximamente · Rol: Recepción</div>
                </div>
            </div>
        </div>
    </div>
</div>
