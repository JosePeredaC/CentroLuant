@model CentroLuant.Models.Cita

@{
    ViewData["Title"] = "Registrar cita";
    var especialistas = ViewBag.Especialistas as List<CentroLuant.Models.Usuario>;
}

<style>
    .panel-wrapper {
        max-width: 920px;
        margin: 0 auto;
        padding: 24px 20px 40px;
    }

    .form-card {
        background: #ffffff;
        border-radius: 18px;
        padding: 24px 26px 30px;
        border: 1px solid #E2E8F0;
        box-shadow: 0 18px 40px rgba(15,23,42,0.1);
    }

    .form-header {
        display: flex;
        justify-content: space-between;
        align-items: flex-start;
        gap: 12px;
        margin-bottom: 22px;
    }

    .form-title {
        font-size: 1.4rem;
        font-weight: 700;
        color: #0F172A;
        margin: 0;
    }

    .form-subtitle {
        margin: 4px 0 0;
        color: #64748B;
        font-size: .9rem;
    }

    .pill-badge {
        padding: 4px 10px;
        border-radius: 999px;
        font-size: .75rem;
        background: #DBEAFE;
        color: #1D4ED8;
        font-weight: 600;
        text-transform: uppercase;
        letter-spacing: .05em;
    }

    .form-label {
        font-weight: 500;
        font-size: .9rem;
        color: #0F172A;
    }

    .form-control,
    .form-select {
        border-radius: 12px;
        border-color: #E2E8F0;
        font-size: .9rem;
    }

        .form-control:focus,
        .form-select:focus {
            border-color: #3B82F6;
            box-shadow: 0 0 0 .15rem rgba(59,130,246,.25);
        }

    .required::after {
        content: " *";
        color: #EF4444;
        font-weight: 700;
    }

    .section-title {
        font-size: .8rem;
        text-transform: uppercase;
        letter-spacing: .12em;
        color: #94A3B8;
        font-weight: 600;
        margin-bottom: 8px;
    }

    .btn-primary-strong {
        border-radius: 999px;
        padding: 9px 22px;
        font-weight: 600;
        letter-spacing: .05em;
        text-transform: uppercase;
        font-size: .78rem;
    }

    .btn-secondary-soft {
        border-radius: 999px;
        padding: 9px 18px;
        font-weight: 500;
        font-size: .8rem;
    }

    .helper-text {
        font-size: .8rem;
        color: #94A3B8;
    }
</style>

<div class="panel-wrapper">
    <div class="form-card">
        <div class="form-header">
            <div>
                <h2 class="form-title">Registrar nueva cita</h2>
                <p class="form-subtitle">
                    Programe la atención indicando fecha, hora, paciente y especialista asignado.
                </p>
            </div>
            <span class="pill-badge">
                Agenda clínica
            </span>
        </div>

        @if (ViewBag.Error != null)
        {
            <div class="alert alert-danger py-2 px-3 mb-3">
                @ViewBag.Error
            </div>
        }

        <form asp-action="Crear" method="post">
            @Html.AntiForgeryToken()

            <!-- BLOQUE 1: FECHA Y HORA -->
            <div class="mb-2">
                <div class="section-title">Programación</div>
            </div>

            <div class="row g-3 mb-3">
                <div class="col-md-4">
                    <label asp-for="Fecha" class="form-label required">Fecha</label>
                    <input asp-for="Fecha" type="date" class="form-control" />
                    <span asp-validation-for="Fecha" class="text-danger small"></span>
                </div>

                <div class="col-md-4">
                    <label asp-for="Hora" class="form-label required">Hora</label>
                    <input asp-for="Hora" type="time" class="form-control" />
                    <span asp-validation-for="Hora" class="text-danger small"></span>
                </div>

                <div class="col-md-4">
                    <label asp-for="Estado" class="form-label">Estado</label>
                    <input asp-for="Estado" class="form-control" />
                    <span asp-validation-for="Estado" class="text-danger small"></span>
                    <div class="helper-text mt-1">
                        Por defecto: <strong>Programada</strong>.
                    </div>
                </div>
            </div>

            <!-- BLOQUE 2: PACIENTE Y ESPECIALISTA -->
            <div class="mb-2">
                <div class="section-title">Asignación</div>
            </div>

            <div class="row g-3 mb-3">
                <div class="col-md-4">
                    <label asp-for="DNI_Paciente" class="form-label required">DNI del paciente</label>
                    <input asp-for="DNI_Paciente" class="form-control" maxlength="8" />
                    <span asp-validation-for="DNI_Paciente" class="text-danger small"></span>
                    <div class="helper-text mt-1">
                        Debe existir un paciente registrado con este DNI.
                    </div>
                </div>

                <div class="col-md-8">
                    <label asp-for="ID_Especialista" class="form-label required">Especialista</label>
                    <select asp-for="ID_Especialista" class="form-select">
                        <option value="">-- Seleccione especialista --</option>
                        @if (especialistas != null)
                        {
                            foreach (var e in especialistas)
                            {
                                <option value="@e.ID_Usuario">
                                    @e.NombreCompleto (@e.UsuarioLogin)
                                </option>
                            }
                        }
                    </select>
                    <span asp-validation-for="ID_Especialista" class="text-danger small"></span>
                    <div class="helper-text mt-1">
                        Solo se muestran usuarios con rol <strong>Especialista</strong> y estado activo.
                    </div>
                </div>
            </div>

            <!-- ACCIONES -->
            <div class="d-flex justify-content-between align-items-center mt-3">
                <a asp-action="Index" class="btn btn-outline-secondary btn-secondary-soft">
                    Volver al listado
                </a>
                <button type="submit" class="btn btn-primary btn-primary-strong">
                    Guardar cita
                </button>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
