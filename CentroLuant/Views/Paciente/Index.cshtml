@model IEnumerable<CentroLuant.Models.Paciente>

@{
    ViewData["Title"] = "Pacientes";
}

<style>
    .panel-wrapper {
        max-width: 1100px;
        margin: 0 auto;
        padding: 20px 20px 40px;
    }

    .pac-header {
        display: flex;
        align-items: center;
        justify-content: space-between;
        gap: 12px;
        margin-bottom: 18px;
    }

    .pac-title {
        font-size: 1.6rem;
        font-weight: 700;
        color: #0F172A;
        margin: 0;
    }

    .pac-subtitle {
        margin: 4px 0 0;
        color: #64748B;
        font-size: .9rem;
    }

    .pac-table-card {
        background: #ffffff;
        border-radius: 16px;
        padding: 24px;
        border: 1px solid #E2E8F0;
        box-shadow: 0 6px 22px rgba(15,23,42,0.06);
    }

    .btn-primary-soft {
        border-radius: 10px;
        padding: 8px 14px;
        font-weight: 600;
        border: none;
        background: #3B82F6;
        color: #ffffff;
        white-space: nowrap;
    }

    .table thead th {
        background: #F8FAFC;
        color: #475569;
        font-weight: 600;
        border-bottom: 1px solid #E2E8F0;
        padding-top: 10px;
        padding-bottom: 10px;
    }

    .table tbody td {
        padding-top: 10px;
        padding-bottom: 10px;
        vertical-align: middle !important;
    }

    .pac-actions {
        display: flex;
        gap: 6px;
        justify-content: flex-end;
    }

    .empty-state {
        padding: 24px;
        text-align: center;
        color: #64748B;
        font-size: .95rem;
    }
</style>

<div class="panel-wrapper">

    <div class="pac-header">
        <div>
            <h2 class="pac-title">Pacientes</h2>
            <p class="pac-subtitle">
                Registro y consulta de datos personales de los pacientes.
            </p>
        </div>
        <a asp-action="Crear" class="btn-primary-soft">
            + Registrar paciente
        </a>
    </div>

    @if (TempData["msg"] != null)
    {
        <div class="alert alert-success mt-3">@TempData["msg"]</div>
    }

    @if (TempData["msgError"] != null)
    {
        <div class="alert alert-warning mt-3">@TempData["msgError"]</div>
    }


    <div class="pac-table-card">
        @if (Model == null || !Model.Any())
        {
            <div class="empty-state">
                No hay pacientes registrados todavía.
                Haz clic en <strong>"Registrar paciente"</strong> para agregar el primero.
            </div>
        }
        else
        {
            <div class="table-responsive">
                <table class="table align-middle mb-0">
                    <thead>
                        <tr>
                            <th>DNI</th>
                            <th>Nombre completo</th>
                            <th>Teléfono</th>
                            <th>Correo</th>
                            <th class="text-end">Acciones</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var p in Model)
                        {
                            <tr>
                                <td>@p.DNI</td>
                                <td>@p.NombreCompleto</td>
                                <td>@p.Telefono</td>
                                <td>@p.CorreoElectronico</td>
                                <td class="text-end pac-actions">
                                    <a asp-action="Detalle" asp-route-id="@p.DNI"
                                       class="btn btn-sm btn-outline-secondary">
                                        Ver
                                    </a>
                                    <a asp-action="Editar" asp-route-id="@p.DNI"
                                       class="btn btn-sm btn-outline-primary">
                                        Editar
                                    </a>
                                    <form asp-action="Eliminar" asp-route-id="@p.DNI" method="post"
                                          onsubmit="return confirm('¿Eliminar al paciente @p.NombreCompleto?');">
                                        <button type="submit" class="btn btn-sm btn-outline-danger">
                                            Eliminar
                                        </button>
                                    </form>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
    </div>
</div>
