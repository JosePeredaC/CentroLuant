@model CentroLuant.Models.Paciente

@{
    ViewData["Title"] = "Ficha del paciente";
}

<style>
    .panel-wrapper {
        max-width: 900px;
        margin: 0 auto;
        padding: 20px 20px 40px;
    }

    .detail-card {
        background: #ffffff;
        border-radius: 16px;
        padding: 24px 26px 22px;
        border: 1px solid #E2E8F0;
        box-shadow: 0 8px 26px rgba(15,23,42,0.08);
    }

    .detail-header {
        display: flex;
        justify-content: space-between;
        gap: 12px;
        margin-bottom: 12px;
    }

    .detail-title {
        font-size: 1.5rem;
        font-weight: 700;
        color: #0F172A;
        margin: 0;
    }

    .detail-subtitle {
        color: #64748B;
        font-size: 0.9rem;
        margin-top: 4px;
    }

    .pill-id {
        background: #EEF2FF;
        border-radius: 999px;
        padding: 6px 12px;
        font-size: .8rem;
        color: #4338CA;
        display: inline-flex;
        align-items: center;
        gap: 6px;
    }

    .detail-section-title {
        font-size: .85rem;
        font-weight: 600;
        text-transform: uppercase;
        letter-spacing: .06em;
        color: #94A3B8;
        margin-top: 16px;
        margin-bottom: 8px;
    }

    .detail-label {
        font-size: .85rem;
        font-weight: 500;
        color: #64748B;
        margin-bottom: 2px;
    }

    .detail-value {
        font-size: .95rem;
        color: #0F172A;
        margin-bottom: 8px;
    }

    .btn-secondary-soft {
        border-radius: 999px;
        padding: 8px 16px;
        font-size: .8rem;
        font-weight: 500;
    }

    .btn-primary-strong {
        border-radius: 999px;
        padding: 8px 18px;
        font-size: .8rem;
        font-weight: 600;
        text-transform: uppercase;
        letter-spacing: .04em;
    }
</style>

<div class="panel-wrapper">
    <div class="detail-card">
        <div class="detail-header">
            <div>
                <h2 class="detail-title">@Model.NombreCompleto</h2>
                <p class="detail-subtitle">
                    Ficha de datos personales del paciente.
                </p>
            </div>
            <div class="text-end">
                <div class="pill-id">
                    <span class="fw-semibold">DNI</span>
                    <span>@Model.DNI</span>
                </div>
            </div>
        </div>

        <div class="detail-section-title">Datos personales</div>

        <div class="row">
            <div class="col-md-4 mb-2">
                <div class="detail-label">Fecha de nacimiento</div>
                <div class="detail-value">
                    @(Model.FechaNacimiento.HasValue
                                        ? Model.FechaNacimiento.Value.ToString("dd/MM/yyyy")
                                        : "-")
                </div>
            </div>
        </div>

        <div class="detail-section-title">Contacto</div>

        <div class="row">
            <div class="col-md-6 mb-2">
                <div class="detail-label">Teléfono</div>
                <div class="detail-value">
                    @(string.IsNullOrWhiteSpace(Model.Telefono) ? "-" : Model.Telefono)
                </div>
            </div>
            <div class="col-md-6 mb-2">
                <div class="detail-label">Correo electrónico</div>
                <div class="detail-value">
                    @(string.IsNullOrWhiteSpace(Model.CorreoElectronico)
                                        ? "-"
                                        : Model.CorreoElectronico)
                </div>
            </div>
        </div>

        <div class="detail-section-title">Dirección</div>

        <div class="detail-value">
            @(string.IsNullOrWhiteSpace(Model.Direccion)
                        ? "Sin dirección registrada."
                        : Model.Direccion)
        </div>

        <div class="d-flex justify-content-between mt-4">
            <a asp-action="Index" class="btn btn-outline-secondary btn-secondary-soft">
                Volver al listado
            </a>
            <div class="d-flex gap-2">
                <a asp-action="Editar" asp-route-id="@Model.DNI"
                   class="btn btn-primary btn-primary-strong">
                    Editar datos
                </a>
            </div>
        </div>
    </div>
</div>
